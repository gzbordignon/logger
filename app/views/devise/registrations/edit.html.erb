<div class="container">

<h2 class="center">Editar perfil</h2>

<div class="row">
<div class="col s8 offset-s2">
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: "row" }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <div class="field">
    <%= f.label :first_name, "Nome" %>
    <%= f.text_field :first_name %>
  </div>
  <div class="field">
    <%= f.label :last_name, "Sobrenome" %>
    <%= f.text_field :last_name %>
  </div>
  <div class="field">
    <%= f.label :email, "E-mail" %><br />
    <%= f.email_field :email %>
  </div>


  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field">
    <%= f.label :password, "Senha" %> <i>(deixa em branco se você não quiser mudar)</i><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
    <% if @minimum_password_length %>
      <br />
      <em>mínimo <%= @minimum_password_length %> caracteres</em>
    <% end %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, "Confirma sua senha" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :current_password %> <i>(digite sua senha atual para trocar a senha)</i><br />
    <%= f.password_field :current_password, autocomplete: "current-password" %>
  </div>

  
  <%= f.submit "Confirmar", class: "btn col s12 blue" %>
  
<% end %>


<%= link_to "Voltar", :back %>
</div>
</div>

</div>
